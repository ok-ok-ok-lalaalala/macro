+    def _start_live_input(self, event=None):
+        """Start capturing live keyboard input."""
+        if self.live_recording:
+            return
+        self.live_recording = True
+        self.live_input.config(fg='black')
+        self.live_input.delete('1.0', tk.END)
+        
+        def on_key_press(key):
+            if not self.live_recording:
+                return
+            try:
+                key_str = key.char if hasattr(key, 'char') and key.char else str(key).split('.')[-1]
+                # Filter special keys
+                if key_str not in ['Return', 'BackSpace', 'Tab']:
+                    self.live_input.insert(tk.END, key_str + ' ')
+                    # Auto-add key to current macro
+                    if self.current_macro:
+                        self.current_macro.actions.append({
+                            'type': 'key_press',
+                            'key': key_str,
+                            'timestamp': 0.0
+                        })
+                        self._refresh_actions_display()
+            except:
+                pass
+        
+        self.live_key_listener = keyboard.Listener(on_press=on_key_press)
+        self.live_key_listener.start()
+
+    def _stop_live_input(self, event=None):
